<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.jendouba.volunteer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7C000609"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/almarai"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/almarai_bold"
            android:gravity="center"
            android:text="#CHED_DAREK"
            android:textColor="#fff"
            android:textSize="26sp" />

        <Button
            android:id="@+id/btnMyServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#2196F3"
            android:fontFamily="@font/almarai"
            android:text="قائمة الطلبات"
            android:textColor="#fff"
            android:textFontWeight="900"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/almarai"
            android:gravity="center"
            android:text="الرجاء إختيار المعتمدية"
            android:textColor="#fff"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/cities"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            />

        <TextView
            android:layout_width="208dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/almarai"
            android:gravity="center"
            android:text="Developed by\n Mahmoud TURKI"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>